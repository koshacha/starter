kend side all these messages were received with a single identifier \"order\".",{"type":22,"tag":51,"props":133,"children":134},{},[135,145,155,165],{"type":22,"tag":55,"props":136,"children":137},{},[138,143],{"type":22,"tag":110,"props":139,"children":140},{},[141],{"type":28,"value":142},"currencies",{"type":28,"value":144}," - request currency data.",{"type":22,"tag":55,"props":146,"children":147},{},[148,153],{"type":22,"tag":110,"props":149,"children":150},{},[151],{"type":28,"value":152},"order_data",{"type":28,"value":154}," - request order data.",{"type":22,"tag":55,"props":156,"children":157},{},[158,163],{"type":22,"tag":110,"props":159,"children":160},{},[161],{"type":28,"value":162},"change",{"type":28,"value":164}," - create a request for currency exchange",{"type":22,"tag":55,"props":166,"children":167},{},[168,173],{"type":22,"tag":110,"props":169,"children":170},{},[171],{"type":28,"value":172},"rate",{"type":28,"value":174}," - evaluate the work of the service, whether the order was fulfilled (or not).",{"type":22,"tag":31,"props":176,"children":177},{},[178],{"type":28,"value":179},"I wrote the following code, which completely covered my needs in this typing and works just perfectly.",{"type":22,"tag":181,"props":182,"children":183},"prose-code",{},[184],{"type":22,"tag":185,"props":186,"children":190},"pre",{"className":187,"code":188,"language":189,"meta":7,"style":7},"language-ts shiki shiki-themes dark-plus","interface ServerToClientEvents {\n  ticker: (\n    message: SocketCurrenciesMessage | SocketExchangeRateMessage\n  ) => void;\n  order: (res: OrderResponse) => void;\n}\n\nexport interface ClientSocket extends Socket\u003CServerToClientEvents> {\n  emit(event: \"order\", type: \"currencies\"): this;\n  emit(event: \"order\", type: \"order_data\", dto: GetOrderDto): this;\n  emit(event: \"order\", type: \"change\", dto: CreateOrderDto): this;\n  emit(event: \"order\", type: \"rate\", dto: OrderRateDto): this;\n}\n","ts",[191],{"type":22,"t